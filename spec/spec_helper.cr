def string_to_hex(string)
  hex_number = 0

  string.each_byte.with_index do |byte, index|
    hex_digit = byte.to_s(16).rjust(2, '0')

    #
    # 4 digits
    #
    #hex_number += hex_digit.to_i(16) * (16**(2*(3-index)))

    #
    # 2 digits
    #
    hex_number += hex_digit.to_i(16) * (16**(1 - index))
  end

  hex_number
end
